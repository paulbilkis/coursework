#include <stdio.h>
int max=0;

int iscorrect(int *res, int el){
  int i, sum=0;
  for (i=0; i<5; i++)
    sum+=res[i];
  if ((sum + el) <= 7) return 1;
  else return 0;
}

void print_res (int *res){
  int i;
  for (i=0; i<5; i++){
    printf ("%d ", res[i]);
  }
}

int recursive (int *p, int *res, int j, int cur){
  if (j >= 5) return 1;
  //if (cur < max) return 1;
  int i;
  for (i = j; i<5; i++){
    if (iscorrect (res, p[i])){
      res[cur] = p[i];
      print_res(res);
      printf("true\n");
      if(cur > max)
	max=cur;
      
      if (recursive (p, res, i+1, cur+1)) return 1;
      res[cur] = 0; //backtrace
    }else{
        print_res(res);
      printf("%d false\n", p[i]);
    }
  }

  return 0;
}


int main (void){
  int p[5] = {4,5,1,3,2};
  int res[5]={0,0,0,0,0};
  recursive(p, res, 0, 0);
  print_res(res);
  
}
